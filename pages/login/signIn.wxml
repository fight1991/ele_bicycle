<!--pages/login/signIn.wxml-->
<view class="container">
  <view class="top">
    <view class="user-img"></view>
    <view class="form-container">
      <view class="idcard-item">
        <label class="fs12 label">证件号码</label>
        <view class="idcard-container fw">{{idNO}}</view>
      </view>
      <form class="row-num">
        <view class="form-item">
          <view class="input-container">
            <input type="number" maxlength="11" placeholder-class="fs14" placeholder="请输入手机号" model:value="{{mobile}}"></input>
          </view>
        </view>
        <view class="form-item">
          <view class="input-container form-item-code">
            <view class="input-code">
              <input type="number" model:value="{{authCode}}" disabled="{{!isEditCode}}" focus="{{isEditCode}}" maxlength="4" placeholder-class="fs14" placeholder="验证码"></input>
            </view>
            <view class="btn-code" bindtap="showDialog">{{codeText}}</view>
          </view>
        </view>
      </form>
      <button disabled="{{isDisable}}" bindtap="confirmBtn" class="confirm-btn">确定</button>
    </view>
  </view>
</view>
<!-- dialog组件 -->
<dialog 
 id='myDialog'
 bindcancelEvent="colseDialog"
 bindconfirmEvent="checkImgCodeStatus">
</dialog>
