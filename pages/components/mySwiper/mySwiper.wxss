/* pages/components/swiper/swiper.wxss */
.swiper-box {
  position: relative;
  padding-bottom: 30rpx;
}
.op-btns {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  display: flex;
  flex-direction: column;
}
.op-btn-item {
  padding: 10rpx 0;
}
.dot {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
}
.dot-item {
  width: 14px;
  height: 3px;
  background-color: #ccc;
}
.active {
  background-color: #3E77FF;
}
.swiper-item-box {
  width: 100%;
  height: 100%;
  border-radius: 14rpx;
  background: linear-gradient(45deg, #2a53e9, #4689fc);
  box-sizing: border-box;
  position: relative;
  padding: 10rpx;
  display: flex;
  color: #fff;
}
.dot {
  position: absolute;
}
.head-img {
  margin: 0 40rpx 0 20rpx;
}
.img-box {
  width: 126rpx;
  height: 126rpx;
  margin: 20rpx 0;
}
.img-box .img {
  width: 100%;
  height: 100%;
}
.head-img-text {
  text-align: center;
  color: #4DFF5A;
}
.text-lines {
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.text-line-item {
  display: flex;
  align-items: center;
}
.line-left {
  margin-right: 10rpx;
}