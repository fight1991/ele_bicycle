/* pages/components/uploadCase/uploadCase.wxss */
.case-box {
  width: 680rpx;
  text-align: center;
}
.title {
  font-size: 28rpx;
  font-weight: bold;
  padding: 20rpx 0;
}
.subTitle {
  font-size: 24rpx;
}
.content {
  display: flex;
  padding: 20rpx;
}
.content-img {
  width: 400rpx;
  height: 280rpx;
}
.content-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  margin-left: 10rpx;
}
.content-item-text {
  position: relative;
  font-size: 24rpx;
  padding: 10rpx 0;
}
.content-item-text::before {
  content: '';
  width: 16rpx;
  height: 16rpx;
  background: radial-gradient(circle, #3E77FF, #3E77FF 20%, #fff);
  border-radius: 50%;
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translate(0, -50%);
}