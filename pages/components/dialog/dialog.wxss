.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  /* text-align: center; */
  border-radius: 5rpx;
  overflow: hidden;
}

.wx-dialog-header {
  margin: 30rpx 30rpx 10rpx;
  height: 120rpx;
  background-color: #fff;
}
.img-box {
  width: 100%;
  height: 100%;
}
.wx-dialog-content {
  padding: 20rpx 30rpx; 
}

.wx-dialog-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  border-bottom: 1px solid #ccc;
  padding: 14rpx 20rpx;
}
.input {
  flex: 1;
}
.wx-dialog-item-lb{
  padding: 0 20rpx;
}
.wx-dialog-item-inp{
  flex-grow: 2;
  text-align: left;
}


.dialog-button {
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}
.fs12 {
  font-size: 24rpx;
  text-align: center;
}


.btn-left,.btn-right {
  box-sizing: border-box;
  /* height: 80rpx; */
  padding: 10rpx 60rpx;
  /* line-height: 40rpx; */
  border-radius: 10rpx;
  margin: 0 30rpx;
}
.btn-left {
  border: 1px solid #ccc;
}
.btn-right {
  border: 1px solid #3E78FD;
  background-color: #3E78FD;
  color: #fff;
}