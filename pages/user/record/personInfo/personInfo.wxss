/* pages/user/record/personInfo/personInfo.wxss */

.image {
  width: 100%;
}
.photo-area, .form-area {
  background-color: #fff;
}
.photo-area {
  padding: 20px 10px;
  border-radius: 10px;
}
.face-btn {
  height: 150px;
  width: 150px;
  margin: 0 auto;
  /* background-color: #ccc; */
}
.face-btn .image {
  width: 100%;
  height: 100%;
}
.title {
  padding: 10px 0;
  text-align: center;
}
.tips {
  padding-top: 10px;
}
.tips-detail {
  padding: 0 30px;
  display: flex;
  font-size: 12px;
}
.tag {
  color: red;
}
.license-tip {
  font-size: 12px;
  /* text-align: center; */
  padding: 10px 30px;
}
.idcard {
  /* background-color: #ccc; */
  height: 140px;
  width: 600rpx;
  margin: 0 auto;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.idcard-text {
  text-align: center;
}
.idcard .icon {
  margin: 0 auto;
  height: 80px;
  width: 80px;
  background-color: #00aaee;
}
.common-btn {
  color: #fff;
  background-color: #00aaee;
  margin: 20px;
  padding: 10px 0;
  border-radius: 20px;
  text-align: center;
}
/* 表单样式区域 */
.form-area {
  font-size: 14px;
  width: 580rpx;
  margin: 0 auto;
  padding: 15px;
  box-shadow: 2px 2px 3px 2px #ccc;
  border-radius: 10px;
}
.form-item .input-label {
  width: 85px;
  color: #444;
}
.form-item {
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
}
.holder-style {
  font-size: 12px;
}
.fw {
  font-weight: bold;
}
.btn-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 640rpx;
  margin: 40rpx auto 0;
}

.btn-item {
  width: 300rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #00aaee;
  height: 40px;
  border-radius: 20px
}