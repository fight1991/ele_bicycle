<!--pages/user/record/index.wxml-->
<scroll-view class="scroll-container" scroll-y="true">
  <view class="record">
    <!-- 步骤区域 -->
    <view class="step-box">
      <view class="step-item{{currentStep >= 1 ? ' active' : ''}}">
        <view class="line-through{{currentStep >= 2 ? ' active' : ''}}"></view>
        <view class="dot-box">
          <view class="dot"></view>
        </view>
        <view class="text">完善个人信息</view>
      </view>
      <view class="step-item{{currentStep>=2 ? ' active' : ''}}">
        <view class="line-through{{currentStep>=3 ? ' active' : ''}}"></view>
        <view class="dot-box">
          <view class="dot"></view>
        </view>
        <view class="text">完善车辆信息</view>
      </view>
      <view class="step-item{{currentStep>=3 ? ' active' : ''}}">
        <view class="dot-box">
          <view class="dot"></view>
        </view>
        <view class="text">等待审核</view>
      </view>
    </view>
    <!-- 拍照上传区域 -->
    <view class="photo-area">
      <!-- 人脸区域 -->
      <view class="face-img flex-center-y">
        <view class="title fs16 fw">拍摄并上传人脸照片</view>
        <view class="face-btn" bindtap="faceBtn">
          <!-- 初始未上传图片= -->
          <image wx:if="{{ faceShow }}" mode="aspectFit" src="../../image/face.png"></image>
          <!-- 用户拍照完显示预览的图片 -->
          <image wx:else mode="aspectFit" src="{{ faceSrc }}"></image>
        </view>
        
      </view>
      <view class="tips">
        <view class="title fs16 fw">拍摄并上传本人证件</view>
        <view class="tips-detail">
          <view class="tag">*</view>
          <view class="tips-text">
            证件可选择居民身份证、临时居民身份证、驾驶证、公民护照。
          </view>
        </view>
      </view>
      <!-- 身份证正面区域 -->
      <view class="idcard idcard-front" bindtap="idcartBtn" data-mode="front">
        <image wx:if="{{ frontShow }}" mode="aspectFit" src="../../image/front.svg"></image>
        <image wx:else src="{{ frontSrc }}" mode="aspectFit"></image>
        <!-- <view class="icon"></view>
        <view class="idcard-text">点击拍摄/上传证件正面</view> -->
      </view>
      <!-- 身份证反面区域 -->
      <view class="idcard idcard-back" bindtap="idcartBtn" data-mode="back">
        <image wx:if="{{ backShow }}" mode="aspectFit" src="../../image/back.svg"></image>
        <image wx:else src="{{ backSrc }}" mode="aspectFit"></image>
      </view>
    </view>
    <view class="common-btn" bindtap="nextStep">下一步</view>
  </view>
</scroll-view>
