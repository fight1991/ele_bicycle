<!--pages/user/center/center.wxml-->
<view class="outer">
  <view class="user-bg">
    <view class="user-left">
      <image class="img" src="{{wxUserImg}}" mode="cover"></image>
    </view>
    <view class="user-middle">
      <view class="fs20">{{name}}</view>
      <view class="id-card">{{trueIdcard}}</view>
      <view>{{truePhone}}</view>
    </view>
    <view class="user-right">
      <show-hide-icon
        hideIcon="/pages/image/hide_fff.png"
        showIcon="/pages/image/show_fff.png"
        bindswitchOp="showText">
      </show-hide-icon>
    </view>
  </view>
  <view class="change-tab" bindtap="goToPage">
    <view>更换手机号</view>
    <view class="arrow-r">〉</view>
  </view>
  <view class="common-btn" bindtap="loginOut">退出</view>
</view>
