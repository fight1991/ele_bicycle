.form-item-code {
  display: flex;
  justify-content: space-between;
}
.input-code {
  flex: 1;
}
.btn-code {
  width: 80px;
  color: #00aaee;
  font-size: 14px;
}
.confirm-btn {
  color: #fff;
  background-color: #00aaee;
  margin-top: 20px;
  border-radius: 20px;
}