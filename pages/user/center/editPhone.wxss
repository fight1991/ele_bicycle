.form-container {
  margin: 40rpx 20rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
}
.form-item-label {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ccc;
  padding: 15px 0;
}
.form-item {
  border-bottom: 1px solid #ccc;
  padding: 15px 0;
}
.input-label {
  width: 100px;
}
/* .input-container {
