/* pages/user/center/center.wxss */
.outer {
  padding: 30rpx;
}
.user-bg {
  height: 220rpx;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 10px;
  color: #fff;
  display: flex;
  background: linear-gradient(45deg, #2a53e9, #4689fc);
  align-items: center;
}
.user-left {
  height: 120rpx;
  width: 120rpx;
  padding: 4rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 0 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-left .img {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.user-middle {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 10px;
}
.user-middle .id-card {
  display: flex;
  padding-top: 10rpx;
}
.no-verify-item {
  padding: 2rpx 10rpx;
  border: 1px solid #fff;
  border-radius: 6rpx;
  display: inline-block;
}
.show-item {
  display: flex;
  align-items: center;
}
.verify-name {
  margin-right: 40rpx;
}
.user-right {
  align-self: flex-start;
  /* background-color: #fff; */
  padding: 10rpx;
}
.change-tab {
  margin: 20px 0;
  border-radius: 5px;
  padding: 0 15rpx;
  background-color: #fff;
}
.tab-item {
  padding: 20rpx 0 20rpx 20rpx;
  /* box-shadow: 2px 2px 4px 1px #ccc; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
}
.tab-item.boderNone {
  border: none;
}
.arrow-r {
  font-size: 12px;
  color: #666;
}
