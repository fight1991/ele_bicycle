/* pages/user/center/center.wxss */
.outer {
  padding: 20rpx;
}
.user-bg {
  padding: 30rpx 20px;
  border-radius: 10px;
  color: #fff;
  display: flex;
  background-color: #4370f7;
  align-items: center;
}
.user-left {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 0 10px;
}
.user-left .img {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}
.user-middle {
  flex: 1;
  padding: 0 10px;
}
.user-right {
  align-self: flex-start;
  /* background-color: #fff; */
}
.change-tab {
  margin: 30px 0;
  padding: 20px 15px;
  box-shadow: 2px 2px 4px 1px #ccc;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.arrow-r {
  font-size: 12px;
  color: #666;
}
.common-btn {
  margin-top: 120rpx;
  opacity: .4;
}