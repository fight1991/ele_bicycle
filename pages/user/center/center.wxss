/* pages/user/center/center.wxss */
.outer {
  padding: 20rpx;
}
.user-bg {
  padding: 30rpx 20px;
  border-radius: 10px;
  color: #fff;
  display: flex;
  background-color: #4370f7;
  align-items: center;
}
.user-left {
  height: 40px;
  width: 40px;
  border-radius: 50%;
  background-color: #fff;
  margin: 0 10px;
}
.user-middle {
  flex: 1;
  padding: 0 10px;
}
.user-right {
  width: 15px;
  height: 15px;
  background-color: #fff;
  align-self: flex-start;
}
.change-tab {
  margin: 30px 0;
  padding: 20px 15px;
  box-shadow: 2px 2px 4px 1px #ccc;
  border-radius: 5px;
}