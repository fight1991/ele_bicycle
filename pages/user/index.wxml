      <view class="left stopTap">
        <view class="head-title fs16">单位业务</view>
        <view class="head-title fs12 fc-ccc">Personal Business</view>
      </view>
    </view>
    <view class="bus-item bg-img-base mask" style="background-image:url('/pages/image/bus-owner.png')"  data-bustype="none">
      <view class="left stopTap">
        <view class="head-title fs16">销售门店业务</view>
        <view class="head-title fs12 fc-ccc">Personal Business</view>
      </view>
    </view>
    <view class="bus-item bg-img-base" style="background-image:url('/pages/image/bus-admin.png')" data-bustype="2">
      <view class="left stopTap">
        <view class="head-title fs16">管理员业务</view>
        <view class="head-title fs12 fc-ccc">Administrator Business</view>
      </view>
    </view>
  </view>
