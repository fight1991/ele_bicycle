.grid-box {
  padding: 30rpx 0;
  display: grid;
  grid-template-columns:repeat(auto-fill,210rpx);
  grid-template-rows: 210rpx;
  grid-gap: 30rpx
}
.block-item {
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 5px;
  height: 210rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 3px 24px rgba(21, 86, 160, 0.14);
}

.block-item .text {
  padding: 10rpx 0;
}
.img-box {
  height: 116rpx;
  width: 116rpx;
}
.img-box-item {
  width: 100%;
  height: 100%;
}
