/* pages/user/index.wxss */
.box {
  padding: 30rpx;
}
.center-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 20rpx;
}
.right-box, .switch-box {
  display: flex;
  align-items: center;
}
.switch-box {
  padding-right: 40rpx;
}
.switch-text {
  padding: 0 10rpx;
}
.iconfont-box {
  position: relative;
}
.dot-icon {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
.bussiness-box {
  margin-top: 15px;
}
.bus-item {
  height: 60px;
  padding: 20px;
  /* border: 1px solid #ccc; */
  border-radius: 8px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bus-item .right {
  width: 50px;
  height: 50px;
  background-color: #00aaee;
  border-radius: 50%;
}
.bus-item .left .head-title {
  padding: 2px 0;
}
