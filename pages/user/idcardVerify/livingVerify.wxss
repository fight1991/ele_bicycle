.outer {
  padding: 40rpx 30rpx 80rpx;
}
/* 表单样式区域 */
.form-area {
  padding: 0 30rpx;
  border-radius: 10px;
  background-color: #fff;
}
.form-item .input-label {
  width: 85px;
  color: #1a1a1a;
}
.form-item {
  padding: 24rpx 0;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
}
.holder-style {
  font-size: 12px;
  text-align: right;
  color: #a8a8a8;
}
.fw {
  font-weight: bold;
}
.input, .common-input {
  flex: 1;
  text-align: right;
}
.arrow-area {
  padding-left: 10rpx;
}

