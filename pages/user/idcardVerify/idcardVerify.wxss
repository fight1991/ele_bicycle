/* pages/user/idcardVerify/idcardVerify.wxss */
.outer {
  padding: 40rpx 30rpx 80rpx;
}
.image {
  width: 100%;
}
.photo-area {
  padding: 20rpx;
}
.photo-area, .form-area {
  background-color: #fff;
}
.photo-area {
  border-radius: 10rpx;
}
.face-btn {
  height: 220rpx;
  width: 220rpx;
  margin: 0 auto;
  /* background-color: #ccc; */
}
.face-img {
  padding-bottom: 40rpx;
  border-bottom: 1px solid #f5f5f5;
}
.face-btn .image {
  width: 100%;
  height: 100%;
}
.title {
  padding: 30rpx 0;
  font-size: 30rpx;
  text-align: center;
}
.tips {
  padding: 10rpx 20rpx;
}
.tips-detail {
  text-align: center;
  font-size: 22rpx;
  color: #707070;
  padding-bottom: 30rpx;
}
.tips-text-sub {
  color: #3C79FF;
}
.tag {
  color: red;
}
.license-tip {
  font-size: 12px;
  /* text-align: center; */
  padding: 10px 0;
}
.idcard {
  /* background-color: #ccc; */
  margin: 0 auto;
  display: flex;
  justify-content: center;
}
.idcard-text {
  text-align: center;
}
.idcard .icon {
  margin: 0 auto;
  height: 80px;
  width: 80px;
  background-color: #00aaee;
}
