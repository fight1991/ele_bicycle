<!-- 步骤区域 -->
<view class="step-area">
  <step stepList="{{stepList}}" step="{{currentStep}}"></step>
</view>
<view class="record">
  <view class="check-area">
    <view class="status-image-box">
      <view class="status-image">
        <image class="img" src="{{statusImg}}" mode="widthFix"></image>
      </view>
      <view class="image-text">{{statusText}}</view>
    </view>
      <!-- 返回个人中心按钮-->
    <fixBtn bindtap="routeToPage">返回民生行业首页</fixBtn>
  </view>
</view>

