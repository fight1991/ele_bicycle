/**app.wxss**/
.container {
  color: #444;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}
/* 元素居中并水平排列 */
.flex-center-x {
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 元素居中 垂直排列 */
.flex-center-y {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 水平方向弹性布局 */
.flex-row {
  display: flex;
}
/* 垂直平方向弹性布局 */
.flex-row {
  display: flex;
  flex-direction: column;
}
/* 水平方向居中 */
.flex-row-center {
  display: flex;
  justify-content: center;
}
/* 垂直方向居中 */
.flex-vertical-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}
